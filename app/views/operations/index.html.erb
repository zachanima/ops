<div id="pilots">
  <table>
    <thead>
      <tr>
        <th class="checkbox">H</th>
        <th>Pilot</th>
        <th>Profit</th>
      </tr>
    </thead>
    <tbody>
      <% @pilots.each do |pilot| %>
        <tr>
          <td><%= check_box_tag "haulers[]" %></td>
          <td><%= pilot.name %></td>
          <td></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="2">Total</td>
        <td></td>
      <tr>
    </tbody>
  </table>
  <%= form_tag '' do %>
    <%= submit_tag 'Mark all as paid' %>
  <% end %>
</div>

<div id="operations">
  <h1>Operations</h1>
  <%= link_to 'New operation', new_operation_path %>
  <% @operations.each do |operation| %>
    <div class="operation">
      <h2><%= operation.site.name %></h2>
      <span class="date"><%= operation.created_at.to_s(:short) %></span>
      <span class="pilots"><%= operation.pilots.collect(&:name) * ', ' %></span>
      <span class="total"><%= operation.total %></span>
    </div>
  <% end %>
</div>
